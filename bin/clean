#!/bin/bash

indent() {
  sed -u 's/^/       /'
}

shopt -s globstar

cd $1
if [[ -f ".slugignore" ]]; then
  while read line; do
    [[ ! "$line" =~ ^!.*$ ]] && continue # we only look for lines starting with !
    line=${line:1}

    echo "Deleting '$line'"

    # Adding "/" to the start if it isn't there makes the glob work
    if [[ ! "$line" =~ ^/.*$ ]]; then
    	line="/$line"
    fi

    ls -1d **$line 2>/dev/null |
    while read filepath; do
      rm -rvf "$filepath"
    done

  done < .slugignore
fi
